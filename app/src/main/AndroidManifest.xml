<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.ubbs.photodiary" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.PhotodiaryApplication"
        android:allowBackup="true"
        android:icon="@drawable/photo_diary_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.MainPhotoDiaryActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".ui.activities.MainPhotoDiaryActivity" /> -->
        <activity android:name=".ui.activities.CameraActivity" />
        <activity android:name=".ui.activities.GalleryActivity" />
        <activity
            android:name=".ui.activities.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
